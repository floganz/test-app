<!DOCTYPE html>
<html>
  <head>
    <title>TestApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body ng-app="test-app" ng-controller="MainController as main">
    <div id="nav">
      <div id="logo"><span>Higher education</span></div>
      <div id="new" ng-click="main.new()">
        <span>New record</span>
      </div>
    </div>
    <div id="container">
      <div ng-include='"code/templates/formNew.html"' ng-show="main.show"></div>
      <div ng-repeat="uni in dataservice.records">
        <div class=university-container>
          <div class="university-buttons">
            <button  class="btn btn-primary" ng-click="main.edit(uni.id)">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              Edit
            </button>
            <div ng-controller="ModalController as modal">
              <button class="btn btn-danger" ng-click="open(uni,main.delete)">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                Remove
              </button>
            </div>
          </div>
          <div class="university-dates">
            <div class="university-date">
              From:
              <span class="university-start">{{ uni.start_date }}</span>
            </div>
            <div class="university-date">
              To:
              <span class="university-end">{{ uni.end_date }}</span>
            </div>
          </div>
          <div class="university-content">
            <span class="university-title">
              {{ uni.name }}
            </span>
            <span class="university-degree">
              {{ uni.degree }}
            </span>
          </div>
        </div>
        <div class="clear"></div>
        <div ng-include='"code/templates/formEdit.html"' ng-show="uni.show"></div>
      </div>
      <%#= yield %>
    </div>
  </body>
</html>
